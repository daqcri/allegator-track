#user_nav {
  position: fixed;
  bottom: 10px;
  left: 10px;
  background-color: lightgreen;
  opacity: 0.7;
  border-radius: 5px;
  padding: 3px;
  z-index: 100003; // match uservoice callout
}

#user_nav:hover {
  opacity: 1;
}

.toolbar {
  float: left;
}

span.spinner {
  width: 40px;
  background-image: url(<%= image_path 'indicator.gif' %>);
  background-repeat: no-repeat;
  background-position: left center;
}

.ui-tabs .ui-tabs-nav li {
    text-align: center; 
}

#tabs li a {
    display: inline-block;
    float: none;
    padding: 5px;
    text-decoration: none;
    width: 100%;
}

.progress{
  margin-top: 7px;
}

.info-icon{
  display: inline-block;
}

.param-name {
  margin-right: 10px;
}

.algorithm_checkbox_label {
    width: 100%;
}

.algorithm_checkbox_on {
  background-color: green !important;
  color: yellow !important;
}

/*.algorithm_checkbox_off {
  background-color: none;
  color: black;
}

*/.header_row{
  width: 100px;
}

.trash-icon{
  cursor: pointer;
}

.dataTable td {
  max-width: 10px;  /*the number per se is not used but it is there to get the overflow properties work! */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

#source_id_datatable_filter input, #object_key_datatable_filter input {
  width: 100px;
}

#datatable_filter input {
  width: 200px;
}
.dataTables_filter {
  margin-top: 10px;
} 

#start_button{
  width: 100%;
  margin: 10px 0 20px 0;
  padding: 20px 0 20px 0;
  font-size: 32px;
}

.ui-accordion .ui-accordion-content{
  padding: 0.5em 0.5em;
}

.ui-tabs .ui-tabs-panel{
  padding: 0.5em 0.5em;
}

.action-cancel, .action-delete {
  cursor: pointer;
}

.sankey {
  height: 10000px;
}

.node rect {
  cursor: move;
  fill-opacity: .9;
  shape-rendering: crispEdges;
}

.node text {
  pointer-events: none;
  text-shadow: 0 1px 0 #fff;
}

.link {
  fill: none;
  stroke: #000;
  stroke-opacity: .2;
}


.cycleLink {
  fill: none;
  stroke: #300;
  stroke-opacity: .2;
}

.cycleLink:hover {
  stroke-opacity: .5;
}

.link:hover {
  stroke-opacity: .5;
}

.download-datasets {
  cursor: pointer;
}


.export-command{
  text-decoration: underline;
  cursor: pointer;
}

#data-selector li .ui-icon-close { 
  float: left; 
  margin: 0.4em 0.2em 0 0; 
  cursor: pointer; 
}

.claim_is_t {
  color: white;
  background-color: green !important;
  min-width: 120px;
}

.claim_is_f {
  color: black;
  background-color: red !important;
}

#Logo{
  cursor: pointer;
}

.algo-mix-warn {
  color: white;
  background-color: red;
  border: 1px solid black;
  border-radius: 5px;
  padding: 5px;
  display: none;
  margin-bottom: 10px;
  text-align: center;
}

.upload-hints {
  color: black;
  background-color: lightgreen;
  border: 1px solid black;
  border-radius: 5px;
  padding: 5px;
  margin-bottom: 10px;
  text-align: center;  
}

.upload-hints span {
  font-weight: bold;
  text-decoration: underline;
}

span.ui-icon-with-text {
  text-indent: 20px !important;
  overflow: visible !important;
  display: block;
}

button.allegate {
  margin-left: 10px !important;
  color: red;
  background-color: white;
}

button.allegate span {
  padding: 2px 5px 2px 5px !important;
}
