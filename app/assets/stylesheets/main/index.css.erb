#user_nav {
  clear: both;
  background-color: lightgreen;
  border-radius: 5px;
  padding: 3px;
}

#user_nav:hover {
  opacity: 1;
}

.toolbar {
  float: left;
}

.ui-tabs .ui-tabs-nav li {
    text-align: center; 
}

#tabs li a {
    display: inline-block;
    float: none;
    padding: 5px;
    text-decoration: none;
    width: 100%;
}

.progress{
  margin-top: 7px;
}

.info-icon{
  display: inline-block;
}

.param-name {
  margin-right: 10px;
}

.algorithm_checkbox_label {
  width: 100%;
}

.vivid_checkbox_label {
  background: none !important;
  background-color: green !important;
  color: yellow !important;
}

/*.algorithm_checkbox_off {
  background-color: none;
  color: black;
}

*/.header_row{
  width: 100px;
}

.trash-icon{
  cursor: pointer;
}

.dataTable td {
  max-width: 10px;  /*the number per se is not used but it is there to get the overflow properties work! */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

#start_button{
  width: 100%;
  margin: 10px 0 20px 0;
  padding: 20px 0 20px 0;
  font-size: 32px;
}

.ui-accordion .ui-accordion-content{
  padding: 0.5em 0.5em;
}

.ui-tabs .ui-tabs-panel{
  padding: 0.5em 0.5em;
}

.action-cancel, .action-delete {
  cursor: pointer;
}

.download-datasets {
  cursor: pointer;
}


.export-command{
  text-decoration: underline;
  cursor: pointer;
}

#data-selector li .ui-icon-close { 
  float: left; 
  margin: 0.4em 0.2em 0 0; 
  cursor: pointer; 
}

tr.allegated_claim, tr.allegated_claim>td {
  background-color: yellow;
  font-weight: bold;
  color: blue;
}

.claim_is_t {
  color: white;
  background-color: green !important;
  min-width: 80px;
}

.claim_is_f {
  color: black;
  background-color: red !important;
}

#tag_line {
  font-weight: bold;
  font-style: italic;
  color: blue;
}

.algo-mix-warn {
  color: white;
  background-color: red;
  border: 1px solid black;
  border-radius: 5px;
  padding: 5px;
  display: none;
  margin-bottom: 10px;
  text-align: center;
}

.algorithm_general {
  width: 100%;
  padding: 8px;
  margin-bottom: 5px;
  text-align: center;
  font-weight: bold;
  border: 1px solid yellow;
  border-radius: 4px;
  background-color: green;
  color: yellow;
}

.algorithm_general.combiner_off {
  background-color: transparent;
  color: black;
  border: 1px solid black;
}

.algorithm_config {
  display: none;
  border-left: 2px solid green;
  border-right: 2px solid green;
  border-bottom: 2px solid green;
  border-radius: 5px;
  margin: -10px 5px 10px 5px;
  padding: 10px 5px 5px 5px;
}

.algorithm_config.algorithm_config_general {
  display: block;
  padding-top: 8px;
}

.upload-hints {
  color: black;
  background-color: lightgreen;
  border: 1px solid black;
  border-radius: 5px;
  padding: 5px;
  margin-bottom: 10px;
  text-align: center;  
}

.upload-hints span {
  font-weight: bold;
  text-decoration: underline;
}

span.ui-icon-with-text {
  text-indent: 20px !important;
  overflow: visible !important;
  display: block;
}

button.cellmenubutton {
  margin-left: 10px;
  width: 20px;
  height: 20px;
}

ul#cellmenu {
  position: absolute;
  /*width: 100px;*/
}

ul#cellmenu li {
  /*background-color: yellow;*/
}

ul#runs_menu {
  position: absolute;
}

.ui-layout-resizer-south-closed {
  background-image: url(<%= image_path 'go-up-on.gif' %>) !important;
  background-repeat: no-repeat !important;
  background-position: center center !important;
  background-color: #F6C848 !important;
}

.ui-layout-resizer-west {
  background-color: #F6C848 !important;
}

.ui-layout-toggler-west {
  background-repeat: no-repeat !important;
  background-position: center center !important;
  background-color: #F6C848 !important;
}

.ui-layout-toggler-west-closed {
  background-image: url(<%= image_path 'go-rt-off.gif' %>) !important;
}

.ui-layout-toggler-west-open {
  background-image: url(<%= image_path 'go-lt-off.gif' %>) !important;
}

.ui-layout-center {
  padding: 0 5px 0 5px !important;
}

#explanation-log a {
  text-decoration: underline !important;
}

.filter_container, .dataTables_filter, .ColVis {
  float: right;
}

.ColVis {
  margin-left: 10px;
}

.tabletitle {
  font-size: 14px;
  float: left;
  margin-top: 10px;
}

.dataTables_info {
  clear: none !important;
  float: right !important;
}

.td_clickable {
  cursor: pointer;
}

#datasets_dialog a {
  text-decoration: underline;
}