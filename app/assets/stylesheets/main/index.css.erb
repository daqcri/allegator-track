#user_nav {
  clear: both;
  background-color: lightgreen;
  border-radius: 5px;
  padding: 3px;
}

#user_nav:hover {
  opacity: 1;
}

.toolbar {
  float: left;
}

span.spinner {
  width: 40px;
  background-image: url(<%= image_path 'indicator.gif' %>);
  background-repeat: no-repeat;
  background-position: left center;
}

.ui-tabs .ui-tabs-nav li {
    text-align: center; 
}

#tabs li a {
    display: inline-block;
    float: none;
    padding: 5px;
    text-decoration: none;
    width: 100%;
}

.progress{
  margin-top: 7px;
}

.info-icon{
  display: inline-block;
}

.param-name {
  margin-right: 10px;
}

.algorithm_checkbox_label {
  width: 100%;
}

.vivid_checkbox_label {
  background: none !important;
  background-color: green !important;
  color: yellow !important;
}

/*.algorithm_checkbox_off {
  background-color: none;
  color: black;
}

*/.header_row{
  width: 100px;
}

.trash-icon{
  cursor: pointer;
}

.dataTable td {
  max-width: 10px;  /*the number per se is not used but it is there to get the overflow properties work! */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

#start_button{
  width: 100%;
  margin: 10px 0 20px 0;
  padding: 20px 0 20px 0;
  font-size: 32px;
}

.ui-accordion .ui-accordion-content{
  padding: 0.5em 0.5em;
}

.ui-tabs .ui-tabs-panel{
  padding: 0.5em 0.5em;
}

.action-cancel, .action-delete {
  cursor: pointer;
}

.sankey {
  height: 10000px;
}

.tree_viz {
  height: 1000px;
}

.tree_viz g.node rect {
  cursor: pointer;
  fill: #fff;
  stroke-width: 1.5px;
}

.tree_viz g.node text {
  font-size: 11px;
}

.tree_viz g.link path {
  fill: none;
  stroke: #ccc;
}

.tree_viz g.link text {
  fill: red;
}

.metrics {
  border: 1px solid black;
  border-radius: 5px;
  position: absolute;
  left: 5px;
  top: 5px;
}

.metrics p {
  font-weight: bold;
  color: blue;
  margin: 5px 0 0 5px;
}

.sankey .node rect {
  cursor: move;
  fill-opacity: .9;
  shape-rendering: crispEdges;
}

.sankey .node text {
  pointer-events: none;
  text-shadow: 0 1px 0 #fff;
}

.sankey .link {
  fill: none;
  stroke: #000;
  stroke-opacity: .2;
}


.sankey .cycleLink {
  fill: none;
  stroke: #300;
  stroke-opacity: .2;
}

.sankey .cycleLink:hover {
  stroke-opacity: .5;
}

.sankey .link:hover {
  stroke-opacity: .5;
}

.download-datasets {
  cursor: pointer;
}


.export-command{
  text-decoration: underline;
  cursor: pointer;
}

#data-selector li .ui-icon-close { 
  float: left; 
  margin: 0.4em 0.2em 0 0; 
  cursor: pointer; 
}

tr.allegated_claim, tr.allegated_claim>td {
