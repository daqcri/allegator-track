.tree_viz {
  height: 1000px;
}

.tree_viz g.node rect {
  cursor: pointer;
  fill: #fff;
  stroke-width: 1.5px;
}

.tree_viz g.node text {
  font-size: 11px;
}

.tree_viz g.link path {
  fill: none;
  stroke: #ccc;
}

.tree_viz g.link text {
  fill: red;
}

.metrics {
  border: 1px solid black;
  border-radius: 5px;
  position: absolute;
  left: 5px;
  top: 5px;
}

.metrics p {
  font-weight: bold;
  color: blue;
  margin: 5px 0 0 5px;
}

p#explanation-text {
  font-size: 20px;
}

p#explanation-text-none {
  display: none;
}

